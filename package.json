{
  "name": "json-socket",
  "version": "1.0.0",
  "description": "A wrapper to make websockets much easier to use",
  "main": "src/socket.js",
  "files": [
    "src/"
  ],
  "author": "Nathan Reed <reednj@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "yarn run build:babel && yarn run build:browser && yarn build:demo",
    "build:babel": "./node_modules/.bin/babel src -d lib",
    "build:browser": "browserify lib/socket.flow.js -o lib/socket.js && rm lib/*.flow.js",
    "build:demo": "cp lib/*.js demo/public/js"
  },
  "dependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-env": "^1.6.0"
  },
  "devDependencies": {
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
    "babel-plugin-transform-remove-import": "^1.0.0",
    "babel-preset-flow": "^6.23.0"
  }
}
